
@{
    ViewBag.Title = "Home Page";
}

<input data-bind="value: name">
<input type="button" data-bind="click: addUser" />

<h1>Users:</h1>
<ul data-bind="foreach: users">
    <li data-bind="text: $data.Name">
</ul>


@section scripts {
<script type="text/javascript">
    
    var config = {        
        pollApiUrl: '@Url.RouteUrl(new { httproute = "PollApi", controller = "Poll", action = "Get" })',
        addUserApiUrl: '@Url.RouteUrl(new { httproute = "UsersApi", controller = "User", action = "AddUser" })'
    };

    var vm = new chat.UserList(config);
    ko.applyBindings(vm);
</script>
}