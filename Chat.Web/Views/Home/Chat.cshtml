@using Chat.Core.Entities
@model User

<div class="container">
<div class="row">
<div class="col-lg-12">
  <div class="col-lg-8">
    <div class="panel panel-default" style="height:400px;">
       <div id="publicContent" class="panel-body">               
       </div>
    </div>      
  </div>   
  <div class="col-lg-4">
     @Html.Partial("_Users")
  </div>
</div>
</div>  
<div class="row">
  <div class="col-lg-8">
    <div class="input-group" style="margin-left:15px; width:583px;">
      <input type="text" data-bind="value: sendTextbox" class="form-control">
      <span class="input-group-btn">
        <button class="btn btn-default" data-bind="click: sendMessage" type="button">Send</button>
      </span>
    </div>
  </div>
</div>
</div>

@section scripts {
<script type="text/javascript">
    
    var config = {
        ajaxService: new chat.AjaxService(),
        name: '@Model.Name',
        pollApiUrl: '@Url.Content("~/api/poll?name=" + Model.Name)',
        getUsersApiUrl: '@Url.RouteUrl(new { httproute = "CommandsApi", controller = "Commands", action = "getusers" })',
        sendMessageApiUrl: '@Url.RouteUrl(new { httproute = "CommandsApi", controller = "Commands", action = "sendmessage" })',
        addUserApiUrl: '@Url.RouteUrl(new { httproute = "UsersApi", controller = "User", action = "AddUser" })'
    };

    var vm = new chat.UserList(config);
    ko.applyBindings(vm);
</script>
}